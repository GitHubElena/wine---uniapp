<view class="content"><uni-nav-bar vue-id="1" left-icon="back" left-text="商品详情" fixed color="#fff" background-color="#000000" data-event-opts="{{[['^clickLeft',[['handleBackIndex']]]]}}" bind:clickLeft="__e" bind:__l="__l"></uni-nav-bar><swiper class="swiper-item" circular="true" data-event-opts="{{[['change',[['swiperChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{banner}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><view class="image-wrapper"><image src="{{item.src}}"></image></view></swiper-item></block></swiper><view class="right-top"><block wx:if="{{zan===false}}"><view class="zan"><image src="../../static/heart-gray.png" mode data-event-opts="{{[['tap',[['handleChange',[0]]]]]}}" bindtap="__e"></image></view></block><block wx:else><view class="zan"><image src="../../static/heart.png" mode data-event-opts="{{[['tap',[['handleChange',[1]]]]]}}" bindtap="__e"></image></view></block><view class="share"><button open-type="share" data-event-opts="{{[['tap',[['shareToFriends',['$event']]]]]}}" bindtap="__e"></button><image src="../../static/share.png" mode></image></view></view><view class="indicator">{{currentSwiper+1+"/"+banner.length}}</view><view class="desc"><view hidden="{{!(descTitle)}}" class="desc-title">{{''+descTitle+''}}</view><view hidden="{{!(descVolumn)}}" class="desc-volumn">{{''+descVolumn+''}}</view><view hidden="{{!(descContent)}}" class="desc-content">{{''+descContent+''}}</view><view hidden="{{!(descEnglish)}}" class="desc-english">{{''+descEnglish+''}}</view><view hidden="{{!(descPrice)}}" class="desc-price">{{''+descPrice+''}}</view></view><view class="bg-gray"><view class="appreciate"><view class="appreciate-left"><image src="../../static/appreciate.png" mode></image></view><view class="appreciate-right"><view class="appreciate-count">{{''+count+''}}</view><view class="appreciate-zan"><image src="../../static/zan.png" mode></image></view></view></view><view class="tabbar"><block wx:for="{{tabTitle}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['showCategory',[index]]]]]}}" class="{{['tab-title',index==showCategoryIndex?'on':'']}}" bindtap="__e">{{''+item+''}}</view></block></view></view><view class="bottom-content"><block wx:if="{{showCategoryIndex===0}}"><view><goods-details vue-id="2" bind:__l="__l"></goods-details></view></block><block wx:else><view><goods-evaluation vue-id="3" bind:__l="__l"></goods-evaluation></view></block></view><view class="bottom-fixed"><view data-event-opts="{{[['tap',[['toPageKefu',['$event']]]]]}}" class="kefu" bindtap="__e"><view class="kefu-icon"><image src="../../static/kefu.png" mode></image></view><view class="kefu-word">客服</view></view><view class="shop-cart"><image src="../../static/cart.png" mode></image><view class="shop-count">{{''+shopCount+''}}</view><view class="cart-word">购物车</view></view><view data-event-opts="{{[['tap',[['toPop',[1]]]]]}}" class="add-cart" bindtap="__e">加入购物车</view><view data-event-opts="{{[['tap',[['toPop',[2]]]]]}}" class="bug" bindtap="__e">立即购买</view></view><uni-popup class="vue-ref" vue-id="4" type="bottom" data-ref="popup" bind:__l="__l" vue-slots="{{['default']}}"><view class="popup"><image class="close" src="../../static/close.png" mode data-event-opts="{{[['tap',[['closeCart',['$event']]]]]}}" bindtap="__e"></image><view class="popup-top"><image src="../../static/reduce.png" mode data-event-opts="{{[['tap',[['reduceCount',['$event']]]]]}}" bindtap="__e"></image><view class="number">{{''+chooseNumber+''}}</view><image src="../../static/add.png" mode data-event-opts="{{[['tap',[['addCount',['$event']]]]]}}" bindtap="__e"></image><view class="store">{{'库存: '+storeCount+''}}</view></view><view data-event-opts="{{[['tap',[['numToCart',['$event']]]]]}}" class="popup-bottom" bindtap="__e">{{''+popupBottomWord+''}}</view></view></uni-popup></view>